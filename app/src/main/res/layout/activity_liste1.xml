<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/tof"
    android:layout_height="match_parent"
    tools:context=".ui.Categorie.liste1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/toolbar"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/x"
            android:text="Sable blanc et ciel bleu"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a_la_plage"
            android:textStyle="bold"
            android:textSize="16dp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Latino coco beach"
            android:textColor="@color/Azure"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:background="@drawable/p2" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/com1"
            android:hint="Avis"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Haouaria beach"
            android:textSize="20dp"
            android:textColor="@color/Azure"

            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:background="@drawable/plag1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/com2"
            android:hint="Avis"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Mahdia  beach"
            android:textColor="@color/Azure"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="321dp"
            android:background="@drawable/p4"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Avis"
            android:id="@+id/com3"/>






    </LinearLayout>


</ScrollView>