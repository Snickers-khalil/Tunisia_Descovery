<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tof"
    tools:context=".ui.Categorie.liste2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/toolbar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAHARA"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sahara"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textSize="16dp"
            android:padding="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Chat Jrid Douz"
            android:textSize="20dp"
            android:textColor="@color/Azure"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:background="@drawable/jrid" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/com1"
            android:layout_marginBottom="20dp"
            android:hint="Avis"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Douz et le Chott el-Jerid"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="321dp"
            android:background="@drawable/oasis1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/com3"
            android:hint="Avis"/>






    </LinearLayout>


</ScrollView>